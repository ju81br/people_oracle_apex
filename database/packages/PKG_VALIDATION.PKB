CREATE OR REPLACE PACKAGE BODY APP_APEX.PKG_VALIDATION AS

  FUNCTION FN_SIZE_VALIDATION (P_FIELD IN VARCHAR2) RETURN CHAR IS
    V_SIZE NUMBER;
  BEGIN
    IF P_FIELD IS NULL THEN
		RETURN 'N';
    END IF;
	
    -- NULL AS ZERO
    V_SIZE := LENGTH(TRIM(P_FIELD));

    IF V_SIZE < 3 THEN
      RETURN 'N';
    ELSE
      RETURN 'Y';
    END IF;

  EXCEPTION
    WHEN OTHERS THEN
      -- RETURN NO FOR SAFE
      RETURN 'N';
  END FN_SIZE_VALIDATION;

END PKG_VALIDATION;